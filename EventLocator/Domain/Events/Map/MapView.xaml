<Page x:Class="EventLocator.Domain.Events.Map.MapView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventLocator.Domain.Events.Map"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MapView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView 
            Name="EventList" 
            Grid.Column="0"
            ItemsSource="{Binding Path=ListEvents}"
            PreviewMouseLeftButtonDown="EventList_PreviewMouseLeftButtonDown" 
            MouseMove="EventList_MouseMove"
            AllowDrop="true"
        >
            
        </ListView>

        <Canvas 
            Name="Map" 
            Grid.Column="1"
            AllowDrop="True" 
            DragOver="Map_DragOver" 
            Drop="Map_Drop"
        >
            <Canvas.Background>
                <ImageBrush ImageSource="../../../Resources/Images/map.jpg"/>
            </Canvas.Background>
        </Canvas>
    </Grid>
</Page>
